{
  "name": "demo-api-tests",
  "version": "1.0.0",
  "description": "Demo API Tests with Mocha, Chai and Axios",
  "repository": {
    "type": "git",
    "url": "git@github.com:WarleyGabriel/demo-api-tests.git"
  },
  "license": "ISC",
  "author": "warleygabriel",
  "main": "index.js",
  "scripts": {
    "api:tests": "mocha test/specs/*.spec.js --require @babel/polyfill --require @babel/register --reporter mocha-multi-reporters --reporter-options configFile=mocha.reporters.json",
    "check": "yarn run lint && yarn run prettier",
    "format": "yarn run lint --fix --quiet && yarn run prettier --write",
    "lint": "eslint .",
    "prettier": "prettier --check \"**/*.js*\"",
    "report": "allure generate --clean ./allure-results -o ./allure-report"
  },
  "dependencies": {
    "@babel/cli": "^7.5.0",
    "@babel/core": "^7.5.0",
    "@babel/polyfill": "^7.4.4",
    "@babel/preset-env": "^7.5.0",
    "@babel/register": "^7.4.4",
    "@types/node": "12.0.0",
    "axios": "^0.18.0",
    "chai": "^4.2.0",
    "chai-json-schema": "^1.5.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-import": "^2.17.2",
    "http-status-codes": "^1.3.2",
    "husky": "^3.0.1",
    "json-schema-faker": "^0.5.0-rc17",
    "mocha": "^6.1.4",
    "mocha-allure-reporter": "^1.4.0",
    "mocha-multi-reporters": "^1.1.7",
    "prettier": "^1.18.2"
  }
}
